#!/bin/bash

# Read version and date from version.txt
VERSION=$(head -n 1 "$DOTFILES_PATH/shell-config/version.txt")
LAST_UPDATED=$(tail -n 1 "$DOTFILES_PATH/shell-config/version.txt")

# Rainbow colors
RAINBOW=(
    "$(printf '\033[38;5;196m')"  # Red
    "$(printf '\033[38;5;202m')"  # Orange
    "$(printf '\033[38;5;226m')"  # Yellow
    "$(printf '\033[38;5;46m')"   # Green
    "$(printf '\033[38;5;21m')"   # Blue
    "$(printf '\033[38;5;93m')"   # Purple
)

# Reset color
RESET="\033[0m"

# Create rainbow text
rainbow_text() {
    local text="$1"
    local result=""
    local color_index=0
    
    for (( i=0; i<${#text}; i++ )); do
        result+="${RAINBOW[$color_index]}${text:$i:1}"
        color_index=$(( (color_index + 1) % ${#RAINBOW[@]} ))
    done
    
    echo -e "$result$RESET"
}

# Display welcome message
echo -e "$(rainbow_text "Welcome to your shell configuration")"
echo -e "$(rainbow_text "Version: 2.1.0
echo -e "$(rainbow_text "Last Updated: 2025-04-14